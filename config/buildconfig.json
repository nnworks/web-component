{
  "sass": {
    "scss": {
      "source": {"base": "./src/scss", "glob": "**/*.scss"},
      "target": "./src/css"
    },
    "inline": {
      "source": {"base": "./dist/html", "glob": "**/*.html"},
      "target": "./dist/html"
    }
  },

  "srcs": [
    ["./src/html", "**/*.html"],
    ["./src/css", "**/*.css"]
  ],

  "targets": [
    "./dist/html",
    "./dist/css"
  ]
}